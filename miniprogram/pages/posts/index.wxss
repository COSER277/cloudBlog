/* pages/posts/index.wxss */
.posts {
  width: 100%;
  
}
.posts .post{
  width: 100%;
  height: 13rem;
  margin: 2.5em 0;
  position: relative;
  border-radius: 0.5rem;
 
}
.posts .post .title{
  width: 100%;
  position: absolute;
  bottom: 15%;
  left: 0%;
  /* transform: scale(-50%,0); */
  text-align: center;
  font-size: 1.2rem;
  color: #fff;
}

.posts .post .bg{
  width: 100%;
 height: 100%;
 border-radius: 0.5rem
}
.foot{
  color: rgb(209, 205, 205);
  font-size: 0.8rem;
}
.foot::before,.foot::after{
  content: "";
  width: 4rem;
  height: 1px;
  background: rgb(209, 205, 205);
  display: inline-flex;
  text-align: center;
  line-height: 1px;
}